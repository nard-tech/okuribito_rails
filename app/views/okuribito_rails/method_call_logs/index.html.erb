<div class="search-area">
  <%= form_tag(method_call_logs_path, method: "get") do %>
      <dl class="search">
        <dt>
          <label>Class name</label>
          <%= text_field_tag :class_name, params[:class_name], placeholder: "Class name" %>
        </dt>
        <dt>
          <label>Method name</label>
          <%= text_field_tag :method_name, params[:method_name], placeholder: "Method name" %>
        </dt>
        <dd>
          <button>Search</button>
        </dd>
      </dl>
  <% end %>
</div>

<table class="method_call_info">
  <tbody>
    <tr>
      <th>Method name</th>
      <th>Backtrace</th>
      <th>Recording date</th>
    </tr>
    <% @method_call_logs.each do |method_call_log| %>
      <tr>
        <td>
          <%= method_call_log.full_method_name %>
        </td>
        <td>
          <%= method_call_log.back_trace %>
        </td>
        <td>
          <%= method_call_log.created_at %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @method_call_logs, views_prefix: 'okuribito_rails' %>
